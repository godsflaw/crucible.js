{
  "name": "crucible.js",
  "version": "1.0.0",
  "description": "crucible.js is a library for interacting with Crucible smart contracts.",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run generate-typings && npm run build-ts",
    "build-ts": "tsc",
    "generate-typings": "abi-gen --abis '../crucible/build/contracts/@(Foundry|Crucible).json' --out './src/types/generated' --template './src/types/contract_templates/contract.mustache' --partials './src/types/contract_templates/partials/*.mustache'",
    "test": "xo && nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/godsflaw/crucible.js.git"
  },
  "keywords": [
    "crucible",
    "crucible.js",
    "ethereum",
    "commitment",
    "contract"
  ],
  "author": {
    "name": "Christopher Mooney",
    "email": "chris@dod.net",
    "url": "https://github.com/godsflaw"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godsflaw/crucible.js/issues"
  },
  "homepage": "https://github.com/godsflaw/crucible.js#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "ava": "^0.15.1",
    "coveralls": "^3.0.2",
    "nyc": "^13.1.0",
    "typescript": "^3.1.2",
    "xo": "^0.15.0"
  },
  "dependencies": {
    "@0xproject/utils": "^2.0.2",
    "set-protocol-utils": "1.0.0-beta.14",
    "truffle-hdwallet-provider": "0.0.6"
  },
  "ava": {
    "concurrency": 20
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "space": 2,
    "rules": {
      "no-else-return": 0,
      "no-multiple-empty-lines": 0,
      "no-negated-condition": 0,
      "no-warning-comments": 0,
      "xo/no-process-exit": 0,
      "camelcase": 0
    }
  }
}
